<% language_tabs = current_page.data.language_tabs || [] %>
<% page_content_fullwidth = yield %>
<% page_content = '' %>

<%
  if current_page.data.includes_fullwidth
    current_page.data.includes_fullwidth.each do |include|
      page_content_fullwidth += partial("includes/#{include}")
    end
  end
%>

<%
  if current_page.data.includes
    current_page.data.includes.each do |include|
      page_content += partial("includes/#{include}")
    end
  end
%>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "API Documentation" %></title>
    <%= favicon_tag 'favicon.png' %>
    <style media="screen">
      <%= Rouge::Themes::MonokaiSublimeSlate.render(:scope => '.highlight') %>
    </style>
    <style media="print">
      * {
        transition:none!important;
      }
      <%= Rouge::Themes::Base16::Solarized.render(:scope => '.highlight') %>
    </style>
    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :print, media: :print %>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>

    <% if current_page.data.code_clipboard %>
    <script>
      $(function() { setupCodeCopy(); });
    </script>
    <% end %>
  </head>

  <body class="<%= page_classes %>" data-languages="<%=h language_tabs.map{ |lang| lang.is_a?(Hash) ? lang.keys.first : lang }.to_json %>">
    <main>
      <a href="#" id="nav-button">
        <span>
          NAV
          <%= image_tag('navbar.png') %>
        </span>
      </a>
      <header>
      <div class="left-container">
      <a class="logo" href="https://docs.api.subscan.io/"><%= image_tag('logo.png') %></a>
      <div class="api-text">API Service</div>
      </div>
        <div class="right-menu">
          <a href="https://www.subscan.io/" target="_blank">Explorer</a>
          <a href="https://polkadot.subscan.io/tools/charts" class="hide-xs" target="_blank">Data Analysis</a>
          <a href="https://polkadot.subscan.io/tools/ss58_transform" class="hide-xs" target="_blank">Account Format Transform</a>
        </div>
      </header>
      <div class="toc-wrapper">
        <% if language_tabs.any? %>
          <div class="lang-selector">
            <% language_tabs.each do |lang| %>
              <% if lang.is_a? Hash %>
                <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
              <% else %>
                <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
              <% end %>
            <% end %>
          </div>
        <% end %>
        <% if current_page.data.search %>
          <div class="search">
            <input type="text" class="search" id="input-search" placeholder="Search">
          </div>
          <ul class="search-results"></ul>
        <% end %>
        <ul id="toc" class="toc-list-h1">
          <% toc_data(page_content_fullwidth).each do |h1| %>
            <li class="fullwidth">
              <a href="#<%= h1[:id] %>" class="toc-h1 toc-link" data-title="<%= h1[:title] %>"><%= h1[:content] %></a>
              <% if h1[:children].length > 0 %>
                <ul class="toc-list-h2">
                  <% h1[:children].each do |h2| %>
                    <li>
                      <a href="#<%= h2[:id] %>" class="toc-h2 toc-link" data-title="<%= h2[:title] %>"><%= h2[:content] %></a>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </li>
          <% end %>
          <% toc_data(page_content).each do |h1| %>
            <li>
              <a href="#<%= h1[:id] %>" class="toc-h1 toc-link" data-title="<%= h1[:title] %>"><%= h1[:content] %></a>
              <% if h1[:children].length > 0 %>
                <ul class="toc-list-h2">
                  <% h1[:children].each do |h2| %>
                    <li>
                      <a href="#<%= h2[:id] %>" class="toc-h2 toc-link" data-title="<%= h2[:title] %>"><%= h2[:content] %></a>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </li>
          <% end %>
        </ul>
        <% if current_page.data.toc_footers %>
          <ul class="toc-footer">
            <% current_page.data.toc_footers.each do |footer| %>
              <li><%= footer %></li>
            <% end %>
          </ul>
        <% end %>
        <div class="contact">
          <a
            class="contact-item twitter"
            target="_blank"
            rel="noopener"
            href="https://twitter.com/subscan_io/"
          >
            <%= image_tag('twitter-grey.svg') %>
          </a>
          <a
            class="contact-item github"
            target="_blank"
            rel="noopener"
            href="https://github.com/itering/subscan-essentials"
          >
            <%= image_tag('github-grey.svg') %>
          </a>
          <a
            class="contact-item riot"
            target="_blank"
            rel="noopener"
            href="https://riot.im/app/#/room/!uaYUrKBueiKUurHliJ:matrix.org?via=matrix.org&via=matrix.parity.io&via=web3.foundation"
          >
            <%= image_tag('element-grey.svg') %>
          </a>
          <a
            class="contact-item medium"
            target="_blank"
            rel="noopener"
            href="https://medium.com/subscan"
          >
            <%= image_tag('medium-grey.svg') %>
          </a>
          <a
            class="contact-item mail"
            target="_blank"
            rel="noopener"
            href="mailto:hello@subscan.io"
          >
            <%= image_tag('email-grey.svg') %>
          </a>
        </div>
      </div>
      <div class="page-wrapper">
        <div class="dark-box"></div>
        <div class="content">
          <div class="content-inner content-inner--fullwidth">
            <%= page_content_fullwidth %>
          </div>
          <div class="content-inner">
            <%= page_content %>
          </div>
        </div>
        <div class="dark-box">
          <% if language_tabs.any? %>
            <div class="lang-selector lang-selector--hidden">
              <% language_tabs.each do |lang| %>
                <% if lang.is_a? Hash %>
                  <a href="#" data-language-name="<%= lang.keys.first %>"><%= lang.values.first %></a>
                <% else %>
                  <a href="#" data-language-name="<%= lang %>"><%= lang %></a>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </body>
</html>
